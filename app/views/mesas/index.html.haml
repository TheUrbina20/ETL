<h1>Mesas</h1>
%table.table.table-striped
  %thead
    %tr
      %td='ID'
      %td='Numero'
      %td='Capacidad'
      %td='Acciones'

  %tbody
    - @mesas.each do |mesa|
      %tr
        %td=mesa.id
        %td=mesa.numero
        -if valid_cantidad?(mesa.capacidad)
          %td=mesa.capacidad
        -else
          %td.text-danger=mesa.capacidad
        %td
          = link_to edit_mesa_path(mesa) do
            = fa_icon 'pencil'
          = link_to mesa_path(mesa), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
    %tr='Total'
    %tr=@mesas.count


