<h1>Mesas</h1>
%p= "Total: #{@mesas.count} regitros"
%table.table.table-bordered.table-curved
  %thead
    %tr
      %td='ID'
      %td='Numero'
      %td='Capacidad'
      - unless current_user.admin?
        %td='Acciones'

  %tbody
    - @mesas.each do |mesa|
      %tr
        %td=mesa.id
        %td=mesa.numero
        -if valid_cantidad?(mesa.capacidad)
          %td=mesa.capacidad
        -else
          %td.text.danger=mesa.capacidad
        - unless current_user.admin?
          %td
            = link_to edit_mesa_path(mesa) do
              = fa_icon 'pencil'
            = link_to mesa_path(mesa), method: :delete, data: {confirm: '¿Estás seguro?'} do
              = fa_icon 'trash'
