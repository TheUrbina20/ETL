= simple_form_for @mesa, url: mesa_path, method: :put do |f|
    = f.input :id, readonly: true
    = f.input :numero, readonly: true
    - if valid_cantidad?(@mesa.capacidad)
        = f.input :capacidad, readonly: true 
    - else 
        = f.input :capacidad, disabled: false
    = f.button :submit, class: 'btn btn-primary'
