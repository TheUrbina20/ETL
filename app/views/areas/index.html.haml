<h1>Areas</h1>
%p= "Total: #{@areas.count} regitros"
%table.table.table-bordered.table-curved.table-curved
  %thead
    %tr
      %td='ID'
      %td='Nombre'
      %td='Clave'
      %td='Acciones'
  %tbody
    - @areas.each do |area|
      %tr
        %td=area.id
        -if valid_nombrecosas?(area.nombre)
          %td=area.nombre
        -else
          %td.text.danger=area.nombre
        %td=area.clave
        %td
          = link_to edit_area_path(area) do
            = fa_icon 'pencil'
          = link_to area_path(area), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'


