%table
  %thead
    %tr
      %td='id'
      %td='idServicioLH'
      %td='Fecha'
      %td='idServicioL'
      %td='idHabitacion'
      %td='idEmpleado'
      %td='Acciones'
  %tbody
    - @serviciolh.each do |s|
      %tr
        %td=s.id
        %td=s.idServicioLH
        %td=s.Fecha
        %td=s.idServicioL
        %td=s.idHabitacion
        %td=s.idEmpleado
        %td
          = link_to edit_serviciol_habitacione_path(s) do
            = fa_icon 'pencil'
          = link_to serviciol_habitacione_path(s), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
