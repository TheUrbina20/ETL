<h1>Servicio limpieza en habitación</h1>
%p= "Total: #{@serviciolh.count} regitros"
- unless current_user.admin?
  = link_to 'Eliminar todos', delete_servicios_limpiezas_habitaciones_path, class: 'btn btn-danger', data: { confirm: '¿Estás seguro?'}
%table.table.table-bordered.table-curved{:style => "\r\n    margin-top: 15px;"}
  %thead
    %tr
      %td='ID'
      %td='Fecha'
      %td='# servicio de limpieza'
      %td='# habitación'
      %td='# empleado'
      - unless current_user.admin?
        %td='Acciones'
  %tbody
    - @serviciolh.each do |s|
      %tr
        %td=s.id
        - if valid_date?(s.fecha)
          %td=s.fecha
        - else
          %td.text.danger=s.fecha
        %td=s.id_servicio_limpieza
        %td=s.id_habitacion
        %td=s.id_empleado
        - unless current_user.admin?
          %td
            = link_to edit_serviciol_habitacione_path(s) do
              = fa_icon 'pencil'
            = link_to serviciol_habitacione_path(s), method: :delete, data: {confirm: '¿Estás seguro?'} do
              = fa_icon 'trash'
