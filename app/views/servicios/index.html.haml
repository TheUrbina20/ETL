%table
  %thead
    %tr
      %td='id'
      %td='Nombre'
      %td='Acciones'
  %tbody
    - @servicio.each do |s|
      %tr
        %td=s.id
        - if valid_nombre_servicio? (s.nombre)
          %td=s.nombre
        - else 
          %td.text-danger=s.nombre
        %td
          = link_to edit_servicio_path(s) do
            = fa_icon 'pencil'
          = link_to servicio_path(s), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
