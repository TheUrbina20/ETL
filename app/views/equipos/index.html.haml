%table
  %thead
    %tr
      %td='id'
      %td='id sistems'
      %td='sistema'
      %td='nombre'
      %td='modelo'
      %td='acciones'
  %tbody
    - @equipos.each do |equipo|
      %tr
        %td=equipo.id
        %td=equipo.id_sistema
        %td=equipo.sistema
        %td=equipo.nombre
        %td=equipo.modelo
        %td
          = link_to edit_equipo_path(equipo) do
            = fa_icon 'pencil'
          = link_to equipos_path(equipo), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'

    %tr='Total: '
    %tr=@equipos.count


