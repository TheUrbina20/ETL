= simple_form_for @equipo, url: equipo_path, method: :put do |f|
    = f.input :id, readonly: true, label: 'Equipos:'
    = f.input :id_sistema, readonly: true, label: 'Num de sistema:'
    = f.input :sistema, readonly: true, label: 'Sistema:'
    - if valid_nombrecosas?(@equipo.nombre)
        = f.input :nombre, readonly: true , label: 'Nombre:'
    - else
        = f.input :nombre, disabled: false, label: 'Nombre:'
    = f.input :modelo, readonly: true, label: 'Modelo:'
    = f.submit 'Actualizar',  class: 'btn btn-primary'
