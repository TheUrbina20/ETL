= simple_form_for @equipo, url: equipo_path, method: :put do |f|
    = f.input :id, readonly: true
    = f.input :id_sistema, readonly: true
    = f.input :sistema, readonly: true
    - if valid_nombrecosas?(@equipo.nombre)
        = f.input :nombre, readonly: true 
    - else 
        = f.input :nombre, disabled: false
    = f.input :modelo, readonly: true
    = f.button :submit, class: 'btn btn-primary'
