%table
  %thead
    %tr
      %td='id'
      %td='Nombre'
      %td='Descripcion'
      %td='PrecioDia'
      %td='Acciones'
  %tbody
    - @paquete.each do |pa|
      %tr
        %td=pa.id
        %td=pa.nombre
        %td=pa.descripcion
        %td=pa.precio_por_dia
        %td
          = link_to edit_paquete_path(pa) do
            = fa_icon 'pencil'
          = link_to paquete_path(pa), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
