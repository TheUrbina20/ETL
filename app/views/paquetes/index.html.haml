<h1>Paquetes</h1>
%table.table.table-bordered
  %thead
    %tr
      %td='ID'
      %td='Nombre'
      %td='Descripción'
      %td='Precio por dia'
      %td='Acciones'
  %tbody
    - @paquete.each do |pa|
      %tr
        %td=pa.id
        - if valid_name? (pa.nombre)
          %td=pa.nombre
        - else
          %td.text-danger=pa.nombre
        %td=pa.descripcion
        - if valid_precio? (pa.precio_por_dia)
          %td=pa.precio_por_dia
        - else
          %td.text-danger=pa.precio_por_dia
        %td
          = link_to edit_paquete_path(pa) do
            = fa_icon 'pencil'
          = link_to paquete_path(pa), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
