= simple_form_for @material_por_recibo, url: materiales_por_recibo_path, method: :put do |f|
    = f.input :id, readonly: true, label: 'ID:'
    = f.input :id_sistema, readonly: true, label: 'Num de sistema:'
    = f.input :sistema, readonly: true, label: 'Sistema:'
    = f.input :id_material, readonly: true, label: 'Num de material:'
    = f.input :id_recibo_compra, readonly: true, label: 'Num recibo de compra:'
    - if valid_number?(@material_por_recibo.cantidad)
        = f.input :cantidad, readonly: true, label: 'Cantidad:'
    - else
        = f.input :cantidad, disabled: false, label: 'Cantidad:'
    = f.input :tipo_paquete, readonly: true, label: 'Tipo de paquete:'
    - if valid_date?(@material_por_recibo.f_caducidad)
        = f.input :f_caducidad, readonly: true, label: 'Fecha de caducidad:'
    - else
        = f.input :f_caducidad, disabled: false, label: 'Fecha de caducidad:'
    = f.button :submit, class: 'btn btn-primary'
