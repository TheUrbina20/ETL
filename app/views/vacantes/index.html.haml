%table
  %thead
    %tr
      %td='id'
      %td='Nombre'
      %td='Estado'
      %td='Acciones'
  %tbody
    - @vacantes.each do |vacante|
      %tr
        %td=vacante.id
        %td=vacante.nombre
        %td=vacante.estado
        %td
          = link_to edit_vacante_path(vacante) do
            = fa_icon 'pencil'
          = link_to vacante_path(vacante), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'


