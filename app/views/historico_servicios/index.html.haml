%table
  %thead
    %tr
      %td='id'
      %td='Precio'
      %td='FechaInicio'
      %td='FechaTermino'
      %td='idServicio'
      %td='Acción'

  %tbody
    - @historicos.each do |ma|
      %tr
        %td=ma.id
        %td=ma.precio
        %td=ma.f_inicio
        %td=ma.f_termino
        %td=ma.id_servicio
        %td
          = link_to edit_historico_servicio_path(ma) do
            = fa_icon 'pencil'
          = link_to historico_servicio_path(ma), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
