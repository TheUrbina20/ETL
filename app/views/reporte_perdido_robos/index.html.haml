%table
  %thead
    %tr
      %td='id'
      %td='idReporte'
      %td='Cantidad'
      %td='Fecha'
      %td='idServicioLH'
      %td='idHabitacion'
      %td='idEmpleado'
      %td='idMaterial'
      %td='Acciones'
  %tbody
    - @reporte.each do |s|
      %tr
        %td=s.id
        %td=s.idReporte
        %td=s.Cantidad
        %td=s.Fecha
        %td=s.idServicioLH
        %td=s.idHabitacion
        %td=s.idEmpleado
        %td=s.idMaterial
        %td
          = link_to edit_reporte_perdido_robo_path(s) do
            = fa_icon 'pencil'
          = link_to  reporte_perdido_robo_path(s), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
