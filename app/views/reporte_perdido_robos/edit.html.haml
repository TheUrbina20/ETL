= simple_form_for @reporte, url:  reporte_perdido_robo_path, method: :put do |f|
 = f.input :id, readonly: true
 - if valid_cantidad?(@reporte.cantidad)
  = f.input :cantidad, readonly: true
 - else 
  = f.input :cantidad, disabled: false 
 - if valid_date?(@reporte.fecha)
  = f.input :fecha, readonly: true
 - else 
  = f.input :fecha, disabled: false

 = f.input :id_servicio_limpieza, readonly: true
 = f.input :id_habitacion, readonly: true
 = f.input :id_empleado, readonly: true
 = f.input :id_material, readonly: true
 = f.button :submit, class: 'btn btn-primary'
