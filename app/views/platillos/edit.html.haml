= simple_form_for @platillo, url: platillo_path, method: :put do |f|
    = f.input :id, readonly: true 
    - if valid_nombrecosas?(@platillo.nombre)
        = f.input :nombre, readonly: true 
    - else 
        = f.input :nombre, disabled: false 
    - if valid_price?(@platillo.precio)
        = f.input :precio, readonly: true 
    - else 
        = f.input :precio, disabled: false
    = f.input :descripcion, readonly: true
    = f.button :submit, class: 'btn btn-primary'
