%table
  %thead
    %tr
      %td='id'
      %td='id_empresa'
      %td='nombre'
      %td='costo'
      %td='duracion'
      %td='Acciones'

  %tbody
    - @programas.each do |programa|
      %tr
        %td=programa.id
        %td=programa.nombre
        %td=programa.costo
        %td=programa.duracion
        %td
          = link_to edit_programas_capacitacion_path(programa) do
            = fa_icon 'pencil'
          = link_to programas_capacitacion_path(programa), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'


