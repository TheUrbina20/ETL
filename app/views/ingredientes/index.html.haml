<h1>Ingredientes</h1>
%table.table.table-striped
  %thead
    %tr
      %td='ID'
      %td='Nombre'
      %td='Stock minimo'
      %td='Stock maixmo'
      %td='Cantidad'
      %td='Num tipo'
      %td='Num tipo cantidad'
      %td='Acciones'
  %tbody
    - @ingredientes.each do |ingrediente|
      %tr
        %td=ingrediente.id
        %td=ingrediente.nombre
        %td=ingrediente.stock_minimo
        %td=ingrediente.stock_maximo
        %td=ingrediente.cantidad_stock
        %td=ingrediente.id_tipo
        %td=ingrediente.id_tipo_cantidad
        %td
          = link_to edit_ingrediente_path(ingrediente) do
            = fa_icon 'pencil'
          = link_to ingredientes_path(ingrediente), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'

    %tr='Total'
    %tr=@ingredientes.count


