= simple_form_for @material_por_pedido, url: materiales_por_pedido_path, method: :put do |f|
    = f.input :id, readonly: true
    = f.input :id_sistema, readonly: true
    = f.input :sistema, readonly: true
    = f.input :id_material, readonly: true
    = f.input :id_pedido, readonly: true
    - if valid_number?(@material_por_pedido.cantidad)
        = f.input :cantidad, readonly: true 
    - else 
        = f.input :cantidad, disabled: false
    = f.button :submit, class: 'btn btn-primary'
