%table
  %thead
    %tr
      %td='id'
      %td='id sistema'
      %td='sistema'
      %td='id_pedido_compra'
      %td='f_generacion'
      %td='f_entrega'
  %tbody
    - @recibos.each do |recibo|
      %tr
        %td=recibo.id
        %td=recibo.id_sistema
        %td=recibo.sistema
        %td=recibo.id_pedido_compra
        %td=recibo.f_entrega
        %td
          = link_to edit_recibos_de_compra_path(recibo) do
            = fa_icon 'pencil'
          = link_to recibos_de_compras_path(recibo), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
    %tr='Total'
    %tr=@recibos.count


