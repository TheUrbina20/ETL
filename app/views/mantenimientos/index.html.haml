<h1>Mantenimientos</h1>
%table.table.table-striped
  %thead
    %tr
      %td='ID'
      %td='Tipo'
      %td='Acciones'

  %tbody
    - @mantenimientoe.each do |ma|
      %tr
        %td=ma.id
        %td=ma.tipo
        %td
          = link_to edit_mantenimiento_path(ma) do
            = fa_icon 'pencil'
          = link_to mantenimiento_path(ma), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
