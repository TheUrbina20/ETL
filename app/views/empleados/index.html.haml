
<h1>Empleados</h1>
%table.table.table-striped
  %thead
    %tr
      %td='ID'
      %td='Nombre'
      %td='Fecha de nacimiento'
      %td='Correo electronico'
      %td='Num de telefono'
      %td='Fecha de Entrada'
      %td='Genero'
      %td='RFC'
      %td='Baja'
      %td='Sistema'
      %td='Acciones'
  %tbody
    - @empleados.each do |empleado|
      %tr
        %td=empleado.id
        %td=empleado.nombre
        %td=empleado.f_nacimiento
        - if valid_email?(empleado.c_electronico)
          %td=empleado.c_electronico
        -else
          %td.text-danger=empleado.c_electronico
        %td=empleado.n_telefono
        %td=empleado.f_entrada
        %td=empleado.genero
        %td=empleado.rfc
        %td=empleado.baja
        %td=empleado.sistema
        %td
          = link_to edit_empleado_path(empleado) do
            = fa_icon 'pencil'
          = link_to empleado_path(empleado), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
    %tr='Total'
    %tr=@empleados.count


