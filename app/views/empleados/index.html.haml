%h1 Bienvenido
%a
  = link_to 'Cerrar sesión', destroy_user_session_path, method: :delete

%table
  %thead
    %tr
      %td='id'
      %td='Nombre'
      %td='F.nacimiento'
      %td='C.electronico'
      %td='N.telefono'
      %td='F.Entrada'
      %td='Genero'
      %td='RFC'
      %td='Baja'
      %td='Sistema'
      %td='Acciones'
  %tbody
    - @empleados.each do |empleado|
      %tr
        %td=empleado.id
        %td=empleado.nombre
        %td=empleado.f_nacimiento
        - if valid_email?(empleado.c_electronico)
          %td=empleado.c_electronico
        -else
          %td.text-danger=empleado.c_electronico
        %td=empleado.n_telefono
        %td=empleado.f_entrada
        %td=empleado.genero
        %td=empleado.rfc
        %td=empleado.baja
        %td=empleado.sistema
        %td
          = link_to edit_empleado_path(empleado) do
            = fa_icon 'pencil'
          = link_to empleado_path(empleado), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
    %tr='Total'
    %tr=@empleados.count


