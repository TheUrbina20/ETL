%h1 Bienvenido
%a
  = link_to 'Cerrar sesi√≥n', destroy_user_session_path, method: :delete

%table
  %thead
    %tr
      %td='id'
      %td='Nombre'
      %td='F.nacimiento'
      %td='C.electronico'
      %td='N.telefono'
      %td='F.Entrada'
      %td='Genero'
      %td='RFC'
      %td='Baja'
      %td='Acciones'
  %tbody
    - @empleados.each do |empleado|
      %tr
        %td=empleado.id
        %td=empleado.nombre
        %td=empleado.f_nacimiento
        - if valid_email?(empleado.c_electronico)
          %td=empleado.c_electronico
        -else
          %td.text-danger=empleado.c_electronico
        %td=empleado.n_telefono
        %td=empleado.f_entrada
        %td=empleado.genero
        %td=empleado.rfc
        %td=empleado.baja
        %td
          = link_to 'Edit', edit_empleado_path(empleado)
    %tr='Total'
    %tr=@empleados.count


