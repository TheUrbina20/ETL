<h1>Detalle mantenimiento de equipos</h1>
%table.table.table-striped
  %thead
    %tr
      %td='id'
      %td='idDetalle'
      %td='FechaInicio'
      %td='FechaTermino'
      %td='idEquipoH'
      %td='idMantenimientoE'
      %td='idEmpleado'
      %td='Acción'

  %tbody
    - @mantenimientoe.each do |ma|
      %tr
        %td=ma.id
        %td=ma.idDetalle
        %td=ma.FechaInicio
        %td=ma.FechaTermino
        %td=ma.idEquipoH
        %td=ma.idMantenimientoE
        %td=ma.idEmpleado
        %td
          = link_to edit_dmantenimiento_equipo_path(ma) do
            = fa_icon 'pencil'
          = link_to dmantenimiento_equipo_path(ma), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
