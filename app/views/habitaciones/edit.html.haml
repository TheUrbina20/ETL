= simple_form_for @habitaciones, url: habitacione_path, method: :put do |f|
 = f.input :id, readonly: true , label: 'ID:'
 = f.input :tipo_habitacion, readonly: true , label: 'Tipo de habitaci√≥n:'
 - if valid_activah?(@habitaciones.estado)
  = f.input :estado, readonly: true , label: 'Estado:'
 - else
  = f.input :estado, disabled: false , label: 'Estado:'
  = f.submit 'Actualizar', class: 'button'
