%table
  %thead
    %tr
      %td='id'
      %td='idDetalle'
      %td='Descripcion'
      %td='FechaInicio'
      %td='FechaTermino'
      %td='idHabitacion'
      %td='idMatenimientoH'
      %td='idEmpleado'
      %td='Acción'

  %tbody
    - @mantenimientoh.each do |ma|
      %tr
        %td=ma.id
        %td=ma.idDetalle
        %td=ma.Descripcion
        %td=ma.FechaInicio
        %td=ma.FechaTermino
        %td=ma.idHabitacion
        %td=ma.idMatenimientoH
        %td=ma.idEmpleado
        %td
          = link_to edit_dmantenimiento_habitacione_path(ma) do
            = fa_icon 'pencil'
          = link_to dmantenimiento_habitacione_path(ma), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'