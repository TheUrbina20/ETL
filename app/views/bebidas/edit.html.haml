= simple_form_for @bebida, url:  bebida_path, method: :put do |f|
    = f.input :id, readonly: true, label: 'ID:'
    - if valid_nombrecosas?(@bebida.nombre)
        = f.input :nombre, readonly: true , label: 'Nombre:'
    - else
        = f.input :nombre, disabled: false , label: 'Nombre:'
    - if valid_price?(@bebida.precio)
        = f.input :precio, readonly: true  , label: 'Precio:'
    - else
        = f.input :precio, disabled: false , label: 'Precio:'
    = f.input :descripcion, readonly: true, label: 'Descripci√≥n:'
    = f.button :submit, class: 'btn btn-primary'
