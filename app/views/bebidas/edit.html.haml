= simple_form_for @bebida, url:  bebida_path, method: :put do |f|
    = f.input :id, readonly: true
    - if valid_nombrecosas?(@bebida.nombre)
        = f.input :nombre, readonly: true 
    - else 
        = f.input :nombre, disabled: false 
    - if valid_price?(@bebida.precio)
        = f.input :precio, readonly: true 
    - else 
        = f.input :precio, disables: false
    = f.input :descripcion, readonly: true
    = f.button :submit, class: 'btn btn-primary'
