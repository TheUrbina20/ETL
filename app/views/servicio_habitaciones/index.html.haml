%table
  %thead
    %tr
      %td='id'
      %td='id habitacion rentada'
      %td='id renta'
      %td='id historico servicio'
      %td='id empleado'
      %td='Acciones'
  %tbody
    - @servicioh.each do |s|
      %tr
        %td=s.id
        %td=s.id_habitacion_rentada
        %td=s.id_renta
        %td=s.id_historico_servicio
        %td=s.id_empleado
        %td
          = link_to edit_servicio_habitacione_path(s) do
            = fa_icon 'pencil'
          = link_to servicio_habitacione_path(s), method: :delete, data: {confirm: '¿Estás seguro?'} do
            = fa_icon 'trash'
