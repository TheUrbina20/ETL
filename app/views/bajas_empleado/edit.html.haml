= simple_form_for @baja_empleado, url:  bajas_empleado_path, method: :put do |f|
    = f.input :id, readonly: true
    = f.input :id_empleado, readonly: true
    = f.input :motivo, readonly: true 
    - if valid_date?(@baja_empleado.fecha)
        = f.input :fecha, readonly: true 
    - else 
        = f.input :fecha, disabled: false
    = f.button :submit, class: 'btn btn-primary'
