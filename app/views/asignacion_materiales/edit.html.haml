= simple_form_for @asignacionm, url: asignacion_materiale_path, method: :put do |f|
    = f.input :id, readonly: true, label: 'ID:'
    - if valid_cantidad?(@asignacionm.cantidad)
        = f.input :cantidad, readonly: true , label: 'Cantidad:'
    - else
        = f.input :cantidad, disabled: false , label: 'Cantidad:'
    = f.input :id_habitacion, readonly: true, label: 'Num de habitaci√≥n:'
    = f.input :id_material, readonly: true , label: 'Num de material:'
    = f.submit 'Actualizar', class: 'button'
