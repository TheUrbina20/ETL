= simple_form_for @platillo_por_comanda, url: platillos_por_comanda_path, method: :put do |f|
    = f.input :id, readonly: true
    = f.input :id_comanda, readonly: true 
    = f.input :id_platillo, readonly: true 
    - if valid_number?(@platillo_por_comanda.cantidad)
        = f.input :cantidad, readonly: true 
    - else 
        = f.input :cantidad, disabled: false
    = f.button :submit, class: 'btn btn-primary'
