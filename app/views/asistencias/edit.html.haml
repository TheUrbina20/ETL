= simple_form_for @asistencias, url:  asistencia_path, method: :put do |f|
    = f.input :id , label: 'ID:'
    = f.input :id_empleado , label: 'Num de empleado:'
    = f.input :fecha , label: 'Fecha:'
    = f.input :hora_entrada , label: 'Hora de entrada:'
    = f.input :hora_salida , label: 'Hora de salida:'
    = f.button :submit, class: 'btn btn-primary'