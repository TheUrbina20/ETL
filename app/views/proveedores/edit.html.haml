= simple_form_for @proveedor, url:  proveedore_path, method: :put do |f|
    = f.input :id, readonly: true
    = f.input :id_sistema, readonly: true 
    = f.input :sistema, readonly: true
    = f.input :id_empresa, readonly: true 
    - if valid_name?(@proveedor.nombre)
        = f.input :nombre, readonly: true 
    - else  
        = f.input :nombre, disabled: false
    = f.button :submit, class: 'btn btn-primary'
